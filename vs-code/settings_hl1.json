{
    "files.autoSave": "onFocusChange",
    "editor.tabSize": 2,
    "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordWrap": "on",
    "files.eol": "\n",
    "files.encoding": "utf8",
    "files.maxMemoryForLargeFilesMB": 2048,
    "terminal.integrated.shell.linux": "/usr/bin/zsh",
    "window.openFilesInNewWindow": "on",
    "window.restoreWindows": "all",
    "window.zoomLevel": 0,
    "window.newWindowDimensions": "inherit",
    "workbench.colorCustomizations": {
        "editorError.foreground": "#ffa500",
        "editorWarning.foreground": "#ffa500"
    },
    "workbench.colorTheme": "Plastic",
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    "breadcrumbs.enabled": true,
    "typescript.referencesCodeLens.enabled": true,
    "vsicons.projectDetection.disableDetect": true,
    "explorer.autoReveal": false,
    "editor.suggestSelection": "first",    
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // git
    "gitlens.views.repositories.location": "gitlens",
    "gitlens.views.fileHistory.location": "gitlens",
    "gitlens.views.lineHistory.location": "gitlens",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    // python
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.jediEnabled": false,
    // java world
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.home": "/usr/local/lib/jdk11",
    "maven.executable.options": "",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.fontFamily": "'Meslo LGS NF', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.mouseWheelZoom": true,
    "sonarlint.ls.javaHome": "/usr/local/lib/jdk11",
    "auto-close-tag.SublimeText3Mode": true,
    "editor.fontSize": 13,
}